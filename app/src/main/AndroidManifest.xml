<?xml version="1.0" encoding="utf-8"?>
<manifest package="rest.hello.org.dontfeellikeit"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.CatagoryActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.FactActivity"
            android:label="@string/title_activity_catagory"
            android:parentActivityName=".ui.FactActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.FactActivity"/>
        </activity>
        <activity android:name=".ui.CategoryGridActivity">
        </activity>
    </application>

</manifest>